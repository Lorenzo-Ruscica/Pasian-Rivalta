# Gestione Errore 404
ErrorDocument 404 /404.html

# --- INIZIO RIMozione .HTML ---
RewriteEngine On

# 1. Se qualcuno scrive .html, reindirizzalo alla versione senza (Redirect 301)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R=301]

# 2. Se qualcuno scrive l'indirizzo senza estensione, apri il file .html corrispondente
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_FILENAME}.html [NC,L]
# --- FINE ---